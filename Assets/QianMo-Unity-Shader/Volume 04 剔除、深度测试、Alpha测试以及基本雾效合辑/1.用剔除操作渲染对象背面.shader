

Shader "浅墨Shader编程/Volume4/12.用剔除操作渲染对象背面" 
{
	//--------------------------------【子着色器】--------------------------------
    SubShader 
	{
        Pass
		{
			//【1】设置顶点光照
            Material 
			{
				Emission(0.3,0.3,0.3,0.3)
                Diffuse (1,1,1,1)
            }
			//【2】开启光照
            Lighting On

			//【3】剔除正面（不绘制面向观察者的几何面）
            Cull Front
        } 
    }
}